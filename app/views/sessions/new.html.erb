<div class="login-container">
  <h1>Sign In</h1>
  <div class="mdl-card mdl-shadow--6dp center">
    <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
      <h2 class="mdl-card__title-text">Login</h2>
    </div>
    <div class="mdl-card__supporting-text">
      <%= form_for(:session, url: login_path) do |f| %>
        <div class="mdl-textfield mdl-js-textfield" >
          <%= f.email_field :email, class: "mdl-textfield__input", type: "text" %>
          <%= f.label :email, class: "mdl-textfield__label" %>
        </div>
        <div class="mdl-textfield mdl-js-textfield">
          <%= f.password_field :password, class: "mdl-textfield__input" %>
          <%= f.label :password, class: "mdl-textfield__label" %>
        </div>
          <%= f.submit "Log In", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>

      <% end %>
    </div>
  </div>
</div>
