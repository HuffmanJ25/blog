<h3>Post a Comment</h3>

<%= form_for [ @article, @comment ] do |f| %>
  <p>
    <div class="mdl-textfield mdl-js-textfield">
      <%= f.label :author_name, "Your Name", class: "mdl-textfield__label" %><br/>
      <%= f.text_field :author_name, class: "mdl-textfield__input" %>
    </div>
  </p>
  <p>
    <div class="mdl-textfield mdl-js-textfield">
      <%= f.label :body, "Comment", class: "mdl-textfield__label"%><br/>
      <%= f.text_area :body, class: "mdl-textfield__input", :required => true, :rows => 5%>
    </div>
  </p>

  <p>
    <%= f.submit 'Submit', class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent' %>
  </p>
<% end %>
