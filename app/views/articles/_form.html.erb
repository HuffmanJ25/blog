<%= form_for(@article, html: {multipart: true}) do |f| %>
    <ul>
      <% @article.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title, class: "form-field"%>
    </p>
    <p>
      <%= f.label :body %><br />
      <%= f.text_area :body, class: "form-field" %>
    </p>
    <p>
      <%= f.label :tag_list %><br />
      <%= f.text_field :tag_list, class: "form-field" %>
    </p>
    <p>
      <% if @article.image.exists? %>
        <h3>Background image for article</h3>
          <%= image_tag @article.image.url %><br/><br />
      <% end %>
      <%= f.label :image, "Attach a New Image" %><br />
      <%= f.file_field :image %>
    </p>
    <p>
      <%= f.submit %>
    </p>
    <%= link_to "Log Out", logout_path, method: :delete %>
<% end %>
